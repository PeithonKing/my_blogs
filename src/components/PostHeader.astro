---
import { formatDate } from '@/utils/data.util';
import Section from './Section.astro';
import Tags from './Tags.astro';

interface Props {
	title: string;
	author: string;
	tags: string[];
	minutesRead: string;
	pubDate: string;
	img: {
		src: string;
		alt: string;
	};
	url: string;
}

const { title, pubDate, tags, minutesRead, img, url } = Astro.props;

const formattedDate = formatDate(pubDate);
---

<Section>
	<div class="flex flex-col items-center">
		<p class="px-14 pb-4 pt-6 text-center text-4xl font-bold" transition:name={`title-${url}`}>
			{title}
		</p>
		<div class="pb-4" transition:name={`tags-${url}`}>
			<Tags tags={tags} withHref={true} />
		</div>
		<div class="text-sm">
			<span transition:name={`date-${url}`}>{formattedDate}</span> - <span
				transition:name={`time-${url}`}>{minutesRead}</span
			>
		</div>

		<br />

		{img.src ? <img src={img.src} alt={img.alt} style="border-radius: 10px;" /> : null}
	</div>
</Section>
